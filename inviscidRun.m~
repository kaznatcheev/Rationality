function [data, genotypes, minds] = inviscidRun(n_agents, n_epochs, ...
    game, epsilon, mutation_rate, mutation_size, boundaries)
%[data, genotypes, minds] = inviscidRun(n_agents, n_epochs, game, ...
%   epsilon, mutation_rate, mutation_size, boundaries)
%input:
if (nargin < 7) || isempty(boundaries),
    boundaries = [-2, 2, -2, 2];
end;

if (nargin < 6) || isempty(mutation_size),
    mutation_size = 0.2;
end;

if (nargin < 5) || isempty(mutation_rate),
    mutation_rate = 0.05;
end;

if (nargin < 4) || isempty(epsilon),
    epsilon = 0.05;
end;

if (nargin < 3) || isempty(game),
    game = [1, -1 ; 2, 0];
end;

adjmx = ones(n_agents) - eye(n_agents);
genotypes = rand(n_agents, 2);
genotypes(:, 1) = genotypes(:, 1) .* (boundaries(2) - boundaries(1)) + boundaries(1);
genotypes(:, 2) = genotypes(:, 2) .* (boundaries(4) - boundaries(3)) + boundaries(3);

minds = zeros(n_agents, 4);


end

